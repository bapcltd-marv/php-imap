{
    "name": "bapcltd/php-imap",
    "description": "Manage mailboxes, filter/get/delete emails in PHP (supports IMAP/POP3/NNTP)",
    "keywords": [
        "PHP",
        "mail",
        "IMAP",
        "POP3",
        "mailbox",
        "receive emails"
    ],
    "homepage": "https://github.com/bapcltd-marv/php-imap",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Sergey Barbushin",
            "homepage": "http://linkedin.com/in/barbushin",
            "email": "barbushin@gmail.com"
        },
        {
            "name": "Marv",
            "email": "marv@bapc.ltd"
        }
    ],
    "config": {
        "sort-packages": true
    },
	"conflict": {
        "php-imap/php-imap": "*",
		"vimeo/psalm": "<3.8.3"
	},
    "require": {
        "php": "^7.4",
        "ext-fileinfo": "*",
        "ext-iconv": "*",
        "ext-imap": "*",
        "ext-mbstring": "*",
        "paragonie/hidden-string": "^1.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "maglnet/composer-require-checker": "^2.0",
        "phpunit/phpunit": "^8.5",
        "psalm/plugin-phpunit": "^0.8.1",
        "signpostmarv/php-cs-fixer-config": "^0.16.3",
        "vimeo/psalm": "^3.8"
    },
    "suggest": {
        "ext-fileinfo": "To facilitate IncomingMailAttachment::getMimeType() auto-detection"
    },
    "autoload-dev": {
        "psr-4": {
            "PhpImap\\": "tests/unit"
        }
    },
    "autoload": {
        "psr-4": {
            "PhpImap\\": "src/PhpImap"
        }
    }
}
